<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nanosoft.sreda.Fragement.Fragment_TechNamesReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

    <Spinner
        android:id="@+id/techWiseSpinner"
        android:layout_width="@dimen/_113sdp"
        android:layout_height="wrap_content"
        android:prompt="@string/technology_name_prompt">

    </Spinner>

    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewTechWise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>




</LinearLayout>
