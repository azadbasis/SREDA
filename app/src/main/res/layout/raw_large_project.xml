<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:background="@drawable/tv_bg"
        >

        <TextView
            android:id="@+id/tvSeriNo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/tv_bg"
            android:text="SN"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvProjName"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTechnoname"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tvCapaci"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Capacity"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tvLocat"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFinna"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tvCompleteDate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Completion Date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvOrganization"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tvPresStatus"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:text="Project Name"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Project Details"
            android:background="@drawable/tv_bg"
            />


    </LinearLayout>
</LinearLayout>