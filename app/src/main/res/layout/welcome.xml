<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#009245">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="547.517px"
        android:layout_height="73.917px"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/title01" />
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="584.195px"
        android:layout_height="24.689px"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/title02" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="608px"
        android:layout_height="117px"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:onClick="startSignInActivity"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/btnsinin" />
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="or"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/imageView4"
        android:layout_width="250.352px"
        android:layout_height="76px"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:onClick="goSignUp"
        android:background="@drawable/icedittext" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/blogsurvey"/>

</LinearLayout>