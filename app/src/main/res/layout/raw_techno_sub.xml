<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="@dimen/_50sdp"
               android:orientation="horizontal"
               android:background="@drawable/tv_bg"
               >


               <TextView
                   android:id="@+id/tvTechnoSubName"
                   android:layout_width="@dimen/_150sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:background="@drawable/tv_bg"
                   android:text="Technology Name"
                   android:textColor="@color/black" />

               <TextView
                   android:id="@+id/tvNumOfSystem"
                   android:layout_width="@dimen/_150sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:background="@drawable/tv_bg"
                   android:text="Number of system"
                   android:textColor="@color/black" />

               <TextView
                   android:id="@+id/tvOnGride"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:text="On Grid"
                   android:background="@drawable/tv_bg"
                   />

               <TextView
                   android:id="@+id/tvOffGride"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:text="Off Grid"
                   android:background="@drawable/tv_bg"/>
               <TextView
                   android:id="@+id/tvToe"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:text="toe"
                   android:background="@drawable/tv_bg"/>
               <TextView
                   android:id="@+id/tvTotalTec"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:text="Total"
                   android:background="@drawable/tv_bg"/>

           </LinearLayout>

</LinearLayout>

